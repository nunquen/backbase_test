{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django Debug",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/mycurrency/manage.py",
            "args": ["runserver"],
            "django": true,
            //"cwd": "${workspaceFolder}",
            "env": {
                "DJANGO_SETTINGS_MODULE": "mycurrency.base.settings"
            },
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}